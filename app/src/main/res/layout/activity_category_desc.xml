<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/RelativeLayout_Title_Normal">

        <ImageView
            android:id="@+id/category_pro_iv"
            style="@style/ImageView_Title_Pro" />

        <TextView
            style="@style/TextView_Title_Title"
            android:text="@string/category_decs"
            />

        <ImageView
            android:id="@+id/category_car_iv"
            android:layout_width="@dimen/view_40"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_35"
            android:layout_toLeftOf="@+id/category_menu_iv"
            android:src="@drawable/shopbox_normal_3x" />

        <ImageView
            android:id="@+id/category_menu_iv"
            android:layout_width="@dimen/view_40"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bar_share_3x" />


    </RelativeLayout>

    <View
        style="@style/HorizonLineStyle" />

    <FrameLayout
        android:id="@+id/category_fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_100">

        <Button
            android:id="@+id/category_insertcar_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tran85_white"
            android:text="@string/category_decs_insertcar"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_30" />

        <Button
            android:id="@+id/category_buynow_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_btn_login"
            android:text="@string/category_decs_buynow"
            android:textColor="@color/white"
            android:textSize="@dimen/font_30" />
    </LinearLayout>
</LinearLayout>