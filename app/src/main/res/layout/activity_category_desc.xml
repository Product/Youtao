<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_90"
        android:paddingBottom="@dimen/view_10"
        android:paddingLeft="@dimen/view_25"
        android:paddingRight="@dimen/view_25"
        android:paddingTop="@dimen/view_10">

        <ImageView
            android:id="@+id/category_pro_iv"
            android:layout_width="@dimen/view_25"
            android:layout_height="@dimen/view_44"
            android:layout_centerVertical="true"
            android:background="@drawable/pro_2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/category_decs"
            android:textSize="@dimen/font_40" />

        <ImageView
            android:id="@+id/category_car_iv"
            android:layout_width="@dimen/view_50"
            android:layout_height="@dimen/view_50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_35"
            android:layout_toLeftOf="@+id/category_menu_iv"
            android:background="@drawable/shopbox_normal_2x" />

        <ImageView
            android:id="@+id/category_menu_iv"
            android:layout_width="@dimen/view_50"
            android:layout_height="@dimen/view_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/barmore_normal_2x" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1"
        android:background="@color/bg_line_gray" />

    <FrameLayout
        android:id="@+id/category_fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_100">

        <Button
            android:id="@+id/category_insertcar_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tran85_white"
            android:text="@string/category_decs_insertcar"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_30" />

        <Button
            android:id="@+id/category_buynow_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_btn_login"
            android:text="@string/category_decs_buynow"
            android:textColor="@color/white"
            android:textSize="@dimen/font_30" />
    </LinearLayout>
</LinearLayout>