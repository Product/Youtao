<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/retrieve_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号" />

    <EditText
        android:id="@+id/retrieve_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码" />

    <EditText
        android:id="@+id/retrieve_smscode_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机验证码" />

    <TextView
        android:id="@+id/retrieve_get_smscode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码" />
    <LinearLayout
        android:id="@+id/retrieve_get_password_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_100"
        android:layout_marginLeft="@dimen/view_60"
        android:layout_marginRight="@dimen/view_60"
        android:layout_marginTop="@dimen/view_80"
        android:background="@drawable/bg_login_btn"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_36" />

    </LinearLayout>
</LinearLayout>