<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.youyou.uumall.view.CustomNumberPicker
            android:id="@+id/date_time_date_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_10"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" />

        <com.youyou.uumall.view.CustomNumberPicker
            android:id="@+id/date_time_hour_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" />

        <com.youyou.uumall.view.CustomNumberPicker
            android:id="@+id/date_time_minute_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/view_10"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" />
    </LinearLayout>

</LinearLayout>