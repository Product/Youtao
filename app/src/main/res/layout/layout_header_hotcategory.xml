<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        style="@style/HorizonLineView20Style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_118"
        >
        <View android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/bg_line_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:gravity="center"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/view_250"
            android:layout_height="wrap_content"
            android:textColor="@color/font_hint_gray"
            android:text="@string/home_hotcategory"
            android:textSize="@dimen/font_30"/>
    </RelativeLayout>

</LinearLayout>