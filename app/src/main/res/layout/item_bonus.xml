<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View  style="@style/HorizonLineView20Style"
        android:background="@color/bg_settings_gap"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginLeft="@dimen/view_25"
        android:layout_marginRight="@dimen/view_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_200">
        <TextView
            android:id="@+id/bonus_price_sign"
            android:layout_marginBottom="@dimen/view_25"
            android:layout_alignBottom="@+id/bonus_price"
            android:layout_marginLeft="@dimen/view_35"
            android:text="ï¿¥"
            android:textColor="@color/font_register_smscode"
            android:textSize="@dimen/font_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bonus_price"
            android:layout_marginLeft="@dimen/view_90"
            android:layout_centerVertical="true"
            android:textColor="@color/font_register_smscode"
            android:text="5"
            android:textSize="@dimen/view_130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/view_250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bonus_expiry_date"
                android:text="@string/bonus_item1"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bonus_explain"
                android:layout_marginTop="@dimen/view_10"
                android:text="@string/bonus_item2"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <!--android:background=""-->
        <ImageView
            android:id="@+id/bonus_expiry_iv"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>