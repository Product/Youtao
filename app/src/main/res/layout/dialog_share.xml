<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent">
    <GridView
        android:paddingTop="-10dp"
        android:paddingBottom="-10dp"
        android:background="@drawable/bg_share_shape"
        android:listSelector="@android:color/transparent"
        android:id="@+id/share_gridView"
        android:layout_marginRight="@dimen/view_80"
        android:layout_marginLeft="@dimen/view_80"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>

    <RelativeLayout
        android:background="@drawable/bg_share_shape"
        android:layout_marginRight="@dimen/view_80"
        android:layout_marginLeft="@dimen/view_80"
        android:layout_marginTop="@dimen/view_30"
        android:layout_marginBottom="@dimen/view_30"
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_96">
        <TextView
            android:textColor="@color/font_gray"
            android:text="取      消"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>