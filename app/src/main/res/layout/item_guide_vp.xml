<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/item_guide_giv"
            android:layout_width="@dimen/view_750"
            android:layout_height="@dimen/view_750" />
        <TextView
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_50"
            android:id="@+id/item_guide_tv_0"
            android:layout_marginTop="@dimen/view_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_34"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_35"
            android:id="@+id/item_guide_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>