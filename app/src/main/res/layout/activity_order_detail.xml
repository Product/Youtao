<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_settings_gap"
    android:orientation="vertical">

    <RelativeLayout style="@style/RelativeLayout_Title_Normal">

        <ImageView
            android:id="@+id/order_detail_pro_iv"
            style="@style/ImageView_Title_Pro" />

        <TextView
            style="@style/TextView_Title_Title"
            android:text="确认订单" />
    </RelativeLayout>

    <View
        style="@style/HorizonLineStyle"
        android:background="@color/bg_line_dark_gray" />

    <LinearLayout
        android:id="@+id/confirm_order_info_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_250"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/view_50"
        android:paddingLeft="@dimen/view_25"
        android:paddingRight="@dimen/view_25"
        android:paddingTop="@dimen/view_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_100"
                android:layout_height="@dimen/font_36"
                android:layout_marginRight="@dimen/view_25"
                android:background="@drawable/bg_text_order_shape"
                android:gravity="center"
                android:text="收货人"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/order_detail_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="陈冰    13795376899"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_100"
                android:layout_height="@dimen/font_36"
                android:layout_marginRight="@dimen/view_25"
                android:background="@drawable/bg_text_order_shape"
                android:gravity="center"
                android:text="提货地址"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/order_detail_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="仁川机场T2航站楼"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_30" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/view_100"
                android:layout_height="@dimen/font_36"
                android:layout_marginRight="@dimen/view_25"
                android:background="@drawable/bg_text_order_shape"
                android:gravity="center"
                android:text="提货时间"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/order_detail_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2016-06-25    19:30-20:40"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_30" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_64"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/view_25"
        android:paddingRight="@dimen/view_25">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_64"
            android:layout_weight="1"
            android:background="@color/bg_settings_gap"
            android:gravity="center_vertical"
            android:text="@string/order_detail_item"
            android:textColor="@color/font_hint_gray"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/order_detail_order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/font_country_conuntry"
            android:textSize="@dimen/font_24" />
    </LinearLayout>


    <ListView
        android:id="@+id/order_detail_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_90"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/view_25"
        android:paddingRight="@dimen/view_25">

        <TextView
            android:id="@+id/order_detail_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_25"
            android:text="共3件"
            android:textColor="@color/font_hint_gray"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/order_detail_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:￥1485"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

    <View style="@style/HorizonLineView20Style" />

    <TextView
        android:id="@+id/order_detail_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/view_10"
        android:paddingRight="@dimen/view_10"
        android:paddingTop="@dimen/view_10"
        android:textColor="@color/font_black"
        android:textSize="@dimen/view_25" />

    <TextView
        android:id="@+id/order_detail_create_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/view_10"
        android:paddingLeft="@dimen/view_10"
        android:paddingRight="@dimen/view_10"
        android:textColor="@color/font_black"
        android:textSize="@dimen/view_25" />

    <LinearLayout
        android:id="@+id/order_detail_cancel_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_100"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/order_detail_cancel_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/view_10"
            android:layout_marginLeft="@dimen/view_40"
            android:layout_marginRight="@dimen/view_40"
            android:layout_marginTop="@dimen/view_10"
            android:layout_weight="1"
            android:background="@drawable/bg_disenabled_confirm_shape"
            android:text="@string/order_detail_cancel"
            android:textColor="@color/font_hint_gray"
            android:textSize="@dimen/font_28" />

        <Button
            android:id="@+id/order_detail_pay_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/view_10"
            android:layout_marginLeft="@dimen/view_40"
            android:layout_marginRight="@dimen/view_40"
            android:layout_marginTop="@dimen/view_10"
            android:layout_weight="1"
            android:background="@drawable/bg_enabled_confirm_shape"
            android:text="@string/order_detail_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

    <Button

        android:id="@+id/order_detail_pay_bt2"
        android:layout_width="@dimen/view_650"
        android:layout_height="@dimen/view_86"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/view_10"
        android:layout_marginTop="@dimen/view_10"
        android:background="@drawable/bg_disenabled_confirm_shape"
        android:text="@string/order_detail_cancel"
        android:textColor="@color/font_hint_gray"
        android:textSize="@dimen/font_28" />
</LinearLayout>